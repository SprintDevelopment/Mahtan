@model AccountViewModel

<div class="modal d-block">
    <div class="modal-dialog modal-dialog-centered">

        <div class="modal-content">
            <div class="modal-header bg-secondary">
                <ul class="nav nav-tabs card-header-tabs" role="tablist">
                    <li class="nav-item" role="presentation"><a class="nav-link fw-medium active" href="#signin-tab" data-bs-toggle="tab" role="tab" aria-selected="true"><i class="ci-unlocked me-2 mt-n1"></i>ورود</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link fw-medium" href="#signup-tab" data-bs-toggle="tab" role="tab" aria-selected="false" tabindex="-1"><i class="ci-user me-2 mt-n1"></i>ثبت نام</a></li>
                </ul>
            </div>
            <div class="modal-body tab-content py-4">
                @using (Html.BeginForm("Login", "Account", new { area = "Identity" }, FormMethod.Post, true, new { @id = "signin-tab", @class = "needs-validation tab-pane fade show active", autocomplete = "off" }))
                {
                    <div class="mb-3">
                        <label asp-for="LoginViewModel.PhoneNumber" class="form-label"></label>
                        <input asp-for="LoginViewModel.PhoneNumber" class="form-control" autofocus />
                        <span asp-validation-for="LoginViewModel.PhoneNumber" class="invalid-feedback"></span>
                    </div>
                    <div class="mb-3">
                        <div class=" d-flex flex-wrap justify-content-between">
                            <label class="form-label" for="login-password">کلمه عبور</label>
                            <a class="fs-sm" asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword">کلمه عبور را فراموش کرده اید ؟</a>
                        </div>
                        <input asp-for="LoginViewModel.Password" type="password" class="form-control" id="login-password" />
                        <span asp-validation-for="LoginViewModel.Password" class="invalid-feedback"></span>
                    </div>
                    <div class="mb-3">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="si-remember">
                            <label class="form-check-label" for="si-remember">مرا به خاطر بسپار</label>
                        </div>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">ورود</button>
                }
                <div class="d-flex align-items-center py-3">
                    <hr class="w-100">
                    <div class="px-3">یا</div>
                    <hr class="w-100">
                </div>
                <button type="button" class="btn w-100 btn-outline-primary mb-2">
                    ورود با گوگل <i class="ci-google"></i>
                </button>
            </div>
        </div>
    </div>
</div>