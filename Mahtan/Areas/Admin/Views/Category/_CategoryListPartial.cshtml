@model IEnumerable<Category>

@foreach (var item in Model)
{
    <tr>
        <td>
            <img src="@Url.Content(item.IconFullPath)" width="32">
        </td>
        <td>@item.Title</td>
        <td>@item.ProductSize?.Title</td>
        <td class="py-2">
            <div class="col-auto btn-group btn-group-sm w-100">
                <a class="btn btn-outline-primary" onclick="showInPopup('@Url.Action("CreateOrUpdate", "Category", new { id = item.CategoryId }, Context.Request.Scheme)', 'ویرایش دسته')">مشاهده</a>
                <button class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="visually-hidden">Toggle dropdown</span></button>
                <div class="dropdown-menu my-1">
                    <a class="dropdown-item" href="#">محصولات این دسته</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item text-danger delete" data-id="@item.CategoryId" data-title="@item.Title" style="cursor:pointer">حذف</a>
                </div>
            </div>
        </td>
    </tr>
}
