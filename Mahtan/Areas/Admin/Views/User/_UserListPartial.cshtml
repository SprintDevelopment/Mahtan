@model IEnumerable<UserWithProfile>

@foreach (var item in Model)
{
    <tr>
        <th>@item.Username</th>
        <th>@item.FullName</th>
        <th>@item.PhoneNumber</th>
        <th>@item.RegisterDateTime</th>
        <th>@item.Role.GetDescription()</th>
        <td class="py-2">
            <div class="col-auto btn-group btn-group-sm w-100">
                <a class="btn btn-outline-primary" onclick="showInPopup('@Url.Action("CreateOrUpdate", "User", new { id = item.Username }, Context.Request.Scheme)', 'ویرایش روش', true)">مشاهده</a>
                <button class="btn btn-outline-primary dropdown-toggle dropdown-toggle-split" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="visually-hidden">Toggle dropdown</span></button>
                <div class="dropdown-menu my-1">
                    <a class="dropdown-item text-danger delete" data-id="@item.Username" data-title="@item.FullName" style="cursor:pointer">حذف</a>
                </div>
            </div>
        </td>
    </tr>
}
